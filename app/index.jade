doctype html
html.no-js
head
    meta(charset='utf-8')
    title Java Complete Status
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //
       Place favicon.ico and apple-touch-icon.png in the root directory 
    //
       build:css styles/vendor.css 
    //
       bower:css
    link(rel='stylesheet', href='bower_components/animate.css/animate.css')
    //
       endbower 
    //
       endbuild 
    //
       build:css styles/main.css 
    link(rel='stylesheet', href='styles/main.css')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css')
    //
       endbuild 
    //
       build:js scripts/vendor/modernizr.js 
    script(src='bower_components/modernizr/modernizr.js')
    //
       endbuild 
  body
    //if lt IE 10
      p.browsehappy
        | You are using an
        strong outdated
        | browser. Please
        a(href='http://browsehappy.com/') upgrade your browser
        | to improve your experience.
    .container
      .title Complete Status
      .form
        .subForm.completeForm
          .completeValue.countValue 0
          .switch
            input#completeBtn(type='checkbox')
            label Complete
        .subForm.radioForm
          #selectionChart
          .radioValues
            #countA.radioValue 0
            #countB.radioValue 0
            #countC.radioValue 0
            #countD.radioValue 0
          .label
            .optionItem
              .smallSwitch
                input(type='radio' name='answer' id='a' value='a')
                label(for='a') A
            .optionItem
              .smallSwitch
                input(type='radio' name='answer' id='b' value='b')
                label(for='b') B
            .optionItem
              .smallSwitch
                input(type='radio' name='answer' id='c' value='c')
                label(for='c') C
            .optionItem
              .smallSwitch
                input(type='radio' name='answer' id='d' value='d')
                label(for='d') D
    //
    script(src='http://l2.io/ip.js?var=userip')
    script(src='/socket.io/socket.io.js')
    //
       bower:js
    script(src='bower_components/jquery/dist/jquery.js')
    script(src='bower_components/webcomponentsjs/webcomponents.js')
    script(src='bower_components/highcharts/highcharts.js')
    script(src='bower_components/highcharts/highcharts-more.js')
    script(src='bower_components/highcharts/modules/exporting.js')
    //
       endbower 
    //
       endbuild 
    //
       build:js scripts/plugins.js 
    //
       endbuild 
    //
       build:js scripts/main.js 
    script(src='scripts/main.js')
    //
       endbuild 
