*,*:after,*:before
  box-sizing: border-box
  

.switch
  //add z-index for showing the button upper the container
  z-index: 1
  margin: 50px
  center(150px)
  height: 150px
  position: relative
  input
    /* First, we make it as wide as the container */
    position: absolute
    left:0
    width: 100%
    height: 100%
    /* Then, we put it on top of everything else */
    z-index: 100
    /* Last, we make it invisible */
    opacity: 0
    /* This one is just for ergonomy */
    cursor: pointer
  label
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    color: #a5a39d;
    font-size: 30px;
    text-align: center;
    line-height: 150px;
    text-shadow: 0 2px 1px rgba(0,0,0,0.25);
    border-radius: 50%;
    background: #b25244; /* Fallback */
    background: linear-gradient(#f7f2f6, #b2ac9e);
    transition: all 0.2s
    z-index: -1;
    box-shadow:
      inset 0 2px 3px rgba(255,255,255,0.13),
      0 5px 8px rgba(0,0,0,0.3),
      0 10px 10px 4px rgba(0,0,0,0.3);
    &:before
      content: ""; 
      position: absolute;
      left: -10px;
      right: -10px;
      top: -10px;
      bottom: -10px;
      z-index: -2;
      border-radius: 50%;
      box-shadow: inset 0 10px 10px             rgba(0,0,0,0.13); 
      -webkit-filter:blur(1px); /* Smooth trick */
      filter: blur(1px); /* Future-proof */
    &:after
      content: ""; 
      position: absolute;
      left: -20px;
      right: -20px;
      top: -20px;
      bottom: -20px;
      z-index: -2;
      border-radius: 50%;
      box-shadow:
        inset 0px 0px 1px 0px rgba(0,0,0,0.5)
  input:checked
    ~ label
        color: #7f543f
        box-shadow:
          inset 0 5px 3px rgba(127,84,63,0.13),
          0 5px 8px rgba(127,84,63,0.35),
          0 3px 10px 4px rgba(127,84,63,0.2)
        :before
          box-shadow: inset 0 10px 10px             rgba(255,84,63,0.5)
          
